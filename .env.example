# ==============================================================================
# POLYB0T CONFIGURATION - L2 Credentials Setup
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control (it's gitignored)

# ==============================================================================
# MODE & SAFETY
# ==============================================================================
POLYBOT_MODE=live
POLYBOT_DRY_RUN=true

# Loop interval (seconds) - recommended: 10+ to avoid rate limits
POLYBOT_LOOP_INTERVAL_SECONDS=10

# ==============================================================================
# POLYMARKET ACCOUNT CONFIGURATION
# ==============================================================================
# Your Polymarket wallet address (the address you see in Polymarket UI)
# This is used for read-only monitoring and as the default funder address
POLYBOT_USER_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# Funder address (usually same as USER_ADDRESS for EOA wallets)
# Only differs if using proxy/Safe wallets
POLYBOT_FUNDER_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# Signature type (REQUIRED - must match your account type):
# 0 = EOA (MetaMask, standard wallet with private key)
# 1 = POLY_PROXY (Polymarket proxy wallet)  
# 2 = POLY_GNOSIS_SAFE (Gnosis Safe multi-sig)
POLYBOT_SIGNATURE_TYPE=0

# ==============================================================================
# L2 CLOB CREDENTIALS (REQUIRED for authenticated endpoints)
# ==============================================================================
# Generate these using: poetry run python scripts/generate_l2_creds.py
# OR via the Polymarket UI Builder Profile & Keys page
# These credentials allow placing/canceling orders and viewing account state

POLYBOT_CLOB_API_KEY=
POLYBOT_CLOB_API_SECRET=
POLYBOT_CLOB_API_PASSPHRASE=

# CLOB API endpoint
POLYBOT_CLOB_BASE_URL=https://clob.polymarket.com

# ==============================================================================
# CHAIN CONFIGURATION (Polygon)
# ==============================================================================
POLYBOT_CHAIN_ID=137

# Polygon RPC URL (for on-chain balance checks)
# Get a free one from: https://www.alchemy.com/ or https://www.infura.io/
# or use public: https://polygon-rpc.com
POLYBOT_POLYGON_RPC_URL=

# Polygon USDC token address (USDC.e - bridged USDC)
POLYBOT_USDCE_TOKEN_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
POLYBOT_USDC_DECIMALS=6

# ==============================================================================
# DATABASE
# ==============================================================================
POLYBOT_DB_URL=sqlite:///./polybot.db

# ==============================================================================
# MARKET FILTERING
# ==============================================================================
POLYBOT_RESOLVE_MIN_DAYS=30
POLYBOT_RESOLVE_MAX_DAYS=60
POLYBOT_MIN_LIQUIDITY=1000
POLYBOT_MAX_SPREAD=0.05

# ==============================================================================
# STRATEGY
# ==============================================================================
POLYBOT_EDGE_THRESHOLD=0.05
POLYBOT_PAPER_BANKROLL=10000.0

# ==============================================================================
# RISK MANAGEMENT (Percentage-based)
# ==============================================================================
POLYBOT_MAX_POSITION_PCT=2.0
POLYBOT_MAX_TOTAL_EXPOSURE_PCT=20.0
POLYBOT_MAX_PER_CATEGORY_EXPOSURE_PCT=10.0
POLYBOT_DRAWDOWN_LIMIT_PCT=15.0
POLYBOT_MAX_DAILY_LOSS_PCT=10.0
POLYBOT_MAX_ORDERS_PER_HOUR=20
POLYBOT_MAX_NOTIONAL_PER_MARKET=1000.0

# ==============================================================================
# LIVE ABSOLUTE RISK LIMITS (USD)
# ==============================================================================
# These are HARD LIMITS for live trading - start small!
POLYBOT_MAX_ORDER_USD=5.0
POLYBOT_MAX_TOTAL_EXPOSURE_USD=25.0
POLYBOT_MAX_OPEN_ORDERS=3
POLYBOT_MAX_DAILY_NOTIONAL_USD=50.0
POLYBOT_KILL_SWITCH_ON_ERRORS=5

# ==============================================================================
# EXECUTION & COSTS
# ==============================================================================
POLYBOT_ORDER_TIMEOUT_SECONDS=300
POLYBOT_SLIPPAGE_BPS=10
POLYBOT_FEE_BPS=20

# ==============================================================================
# TRADE INTENT SYSTEM (Human-in-the-loop)
# ==============================================================================
POLYBOT_INTENT_EXPIRY_SECONDS=60
POLYBOT_INTENT_COOLDOWN_SECONDS=120
POLYBOT_INTENT_PRICE_ROUND=0.001
POLYBOT_INTENT_SIZE_BUCKET_USD=10.0
POLYBOT_DEDUP_EDGE_DELTA=0.01
POLYBOT_DEDUP_PRICE_DELTA=0.01
POLYBOT_AUTO_APPROVE_INTENTS=false

# ==============================================================================
# EXIT MANAGEMENT
# ==============================================================================
POLYBOT_ENABLE_TAKE_PROFIT=true
POLYBOT_TAKE_PROFIT_PCT=10.0
POLYBOT_ENABLE_STOP_LOSS=true
POLYBOT_STOP_LOSS_PCT=5.0
POLYBOT_ENABLE_TIME_EXIT=true
POLYBOT_TIME_EXIT_DAYS_BEFORE=2

# ==============================================================================
# KILL SWITCHES
# ==============================================================================
POLYBOT_MAX_API_ERROR_RATE_PCT=50.0
POLYBOT_MAX_STALE_DATA_SECONDS=60
POLYBOT_MAX_SPREAD_MULTIPLIER=3.0

# ==============================================================================
# API SERVER
# ==============================================================================
POLYBOT_API_HOST=0.0.0.0
POLYBOT_API_PORT=8000

# ==============================================================================
# EXTERNAL APIs
# ==============================================================================
POLYBOT_GAMMA_BASE_URL=https://gamma-api.polymarket.com

# ==============================================================================
# LOGGING
# ==============================================================================
POLYBOT_LOG_LEVEL=INFO
POLYBOT_LOG_FORMAT=json
